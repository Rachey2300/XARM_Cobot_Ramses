
#include <Servo.h>

Servo miServo;

void setup() {
  miServo.attach(11); // Primer pin de servo en RAMPS 1.4 (D11)
}

void loop() {
  // Subir de 0째 a 180째 en 8 segundos
  for (int angulo = 0; angulo <= 180; angulo++) {
    miServo.write(angulo);
    delay(44);  // ~44.4 ms por paso para total de 8 segundos
  }

  // Bajar de 180째 a 0째 en 8 segundos
  for (int angulo = 180; angulo >= 0; angulo--) {
    miServo.write(angulo);
    delay(44);  // ~44.4 ms por paso para total de 8 segundos
  }
}
